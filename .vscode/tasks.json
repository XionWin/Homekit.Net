{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "dependsOn": [
                "copy"
            ]
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Quadcopter/Quadcopter.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "copy",
            "command": "scp",
            "type": "shell",
            "args": [
                "${workspaceFolder}/Quadcopter/bin/Debug/net6.0/*",
                "pi@drone:/home/pi/share/bin"
            ],
            "dependsOn": [
                "build",
            ]
        }
    ]
}